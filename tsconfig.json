{
    "compilerOptions": {

        "incremental": true,
        "target": "ES2020",
        "module": "nodenext",
        "lib": [
            "es2020",
            "webworker",
            "dom"
        ],
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "./dist",
        "removeComments": true,
        "strict": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ]
}